{
  "codeStyle": {
    "javascript": {
      "preferEarlyReturn": true,
      "comments": {
        "guardClausePattern": "Guard clause - exit early"
      }
    },
    "typescript": {
      "preferEarlyReturn": true,
      "comments": {
        "guardClausePattern": "Guard clause - exit early"
      }
    },
    "svelte": {
      "preferEarlyReturn": true,
      "comments": {
        "guardClausePattern": "Guard clause - exit early"
      }
    }
  },
  "editor": {
    "formatOnSave": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "typescript": {
        "no-nested-conditionals": "warn"
      }
    }
  }
} 